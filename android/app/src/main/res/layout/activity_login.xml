<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ScreenMCP"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to connect your phone"
            android:textSize="16sp"
            android:layout_marginBottom="48dp" />

        <Button
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in with Google"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/cbUseSse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use SSE instead of push notifications"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvLoginStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Open Source Server Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/cbOpenSourceServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Source Server"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOpenSourceUserId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User ID"
            android:inputType="text"
            android:enabled="false"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOpenSourceApiUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API Server URL"
            android:inputType="textUri"
            android:enabled="false"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnOpenSourceContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue with Open Source Server"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
