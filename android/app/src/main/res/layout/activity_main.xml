<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- User Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Not signed in"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                style="?attr/materialButtonOutlinedStyle" />
        </LinearLayout>

        <!-- Service Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service: Disconnected"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="#FFCDD2"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnOpenAccessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Accessibility Settings"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnEnablePermissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Permissions (Camera, Notifications)"
            android:layout_marginBottom="8dp"
            style="?attr/materialButtonOutlinedStyle" />

        <!-- Registration Status -->
        <TextView
            android:id="@+id/tvRegistrationStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checking registration..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="#FFF9C4"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:id="@+id/layoutRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Register Phone"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnUnregister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Unregister"
                style="?attr/materialButtonOutlinedStyle" />
        </LinearLayout>

        <!-- Worker Connection -->
        <TextView
            android:id="@+id/tvConnectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Worker: Not started"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="#FFCDD2"
            android:layout_marginBottom="16dp" />

        <!-- Screenshot Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Screenshot"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnScreenshot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Screenshot" />

        <ImageView
            android:id="@+id/ivScreenshot"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Click Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click / Tap"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etClickX"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="X"
                android:inputType="number"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etClickY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Y"
                android:inputType="number" />
        </LinearLayout>

        <Button
            android:id="@+id/btnClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click at (X, Y)"
            android:layout_marginBottom="16dp" />

        <!-- Drag / Swipe Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drag / Swipe"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDragStartX"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Start X"
                android:inputType="number"
                android:layout_marginEnd="4dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDragStartY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Start Y"
                android:inputType="number"
                android:layout_marginEnd="4dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDragEndX"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="End X"
                android:inputType="number"
                android:layout_marginEnd="4dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDragEndY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="End Y"
                android:inputType="number" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drag / Swipe"
            android:layout_marginBottom="16dp" />

        <!-- Type Text Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type Text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTypeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Text to type"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Type Text"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnGetText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Get Text" />
        </LinearLayout>

        <!-- Clipboard Actions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clipboard &amp; Selection"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <Button
                android:id="@+id/btnSelectAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select All"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnCopy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Copy"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnPaste"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Paste" />
        </LinearLayout>

        <!-- Global Actions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Global Actions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Back"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Home"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnRecents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recents" />
        </LinearLayout>

        <!-- UI Tree -->
        <Button
            android:id="@+id/btnGetUiTree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get UI Tree (3s delay)"
            android:layout_marginBottom="4dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:background="#F5F5F5">

            <TextView
                android:id="@+id/tvUiTree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="UI tree will appear here"
                android:fontFamily="monospace"
                android:textSize="10sp"
                android:padding="8dp" />
        </HorizontalScrollView>

        <!-- Log Output -->
        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log output will appear here"
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
